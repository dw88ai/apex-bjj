{
  "expo": {
    "name": "Apex BJJ",
    "slug": "apex-bjj",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "apexbjj",
    "newArchEnabled": true,
    "description": "Master defensive BJJ with personalized 4-week missions and AI-powered feedback",
    "primaryColor": "#58A6FF",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D1117"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.apexbjj.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Apex BJJ uses your microphone to record training session notes via voice logging.",
        "UIBackgroundModes": []
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D1117"
      },
      "package": "com.apexbjj.app",
      "versionCode": 1,
      "permissions": [
        "RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "Allow Apex BJJ to access your microphone for voice logging."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
